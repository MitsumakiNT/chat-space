.side-bar
  .side-bar__user-name
    .side-bar__user-name--box
      = current_user.name
      .side-bar__user-name--box__left 
      .side-bar__user-name--box__right
      = link_to new_group_path do
        = icon('fas', 'edit', class: 'left-icon')
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog', class: 'right-icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group-members 
        = link_to group_messages_path(group) do
          .side-bar__group-list__group-members__name 
            = group.name
          .side-bar__group-list__group-members__message 
            = group.show_last_message
